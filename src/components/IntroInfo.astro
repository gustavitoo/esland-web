---
import { getI18N } from "../i18n/";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<section class="text-xl text-left px-6 sm:px-20 max-w-[70ch] text-pretty mx-auto mt-[20rem] mb-[25rem]">

  <h1
    class="text-4xl font-bold text-center text-wrap m-auto mb-10 tracking-wide uppercase"
  >
    {i18n.INTRO_INFO_TITLE}
  </h1>
</section>
